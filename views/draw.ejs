<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Paint Online ааааа</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/main.css">
    <link rel="stylesheet" href="/css/draw.css">
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col">
                <h4 id="title" class="title"></h4>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <form id="loginForm" class="login">
                    <div class="input-group mb-3">
                        <input type="text" class="login-input" autocomplete="off" placeholder="Login" id="nameInput">
                        <div class="input-group-append">
                            <button class="login-btn" type="submit" onclick="
                            document.querySelector('#otherScha').classList.add('other-re')">Войти</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- параметры с работой окна -->
        <div class="row hidden" id="canvasButtonsRow">
            <div class="col-12">
                <div class="draw-btn-list">
                    <button id="undo" class="draw-btn">Назад</button>
                    <button id="clear" class="draw-btn">Очистить окно</button>
                </div>
                
            </div>
        </div>
        <div class="row">
            <div class="col-12" id="canvasContainer">
                <!-- зона для рисования -->
                <canvas id="canvas" class="hidden"></canvas>
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="col" id="messagesContainer">
                    </div>
                </div>
                <div class="row" style="display: none">
                    <div class="col">
                        <form id="messageForm" class="hidden">
                            <div class="input-group mb-3">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- параметры изменения -->
        <div class="row hidden " id="otherScha">
            <div class="draw-color">
                <span>Выбирите цвет кисти:</span>
                <div id="colors"></div>
            </div>
            <div class="draw-size">
                <span>
                    Выбирите размер кисти:<br>
                </span>
                <div class="thickness small" data-thickness="1"></div>
                <div class="thickness medium" data-thickness="3"></div>
                <div class="thickness big" data-thickness="6"></div>
            </div>
        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/chat.js" type="module"></script>
    <script src="/js/draw.js" type="module"></script>
</body>

</html>